
# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=windsurf_development
DB_PORT=3306

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-min-32-characters
JWT_EXPIRES_IN=24h

# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL for CORS and email links
FRONTEND_URL=http://localhost:3000

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpeg,jpg,png,gif,pdf,doc,docx,txt,xlsx,xls

# Email Configuration (SMTP) - REQUIRED FOR EMAIL NOTIFICATIONS
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@grievance-portal.com

# Alternative Email (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key

# Real-time Configuration
REALTIME_ENABLED=true
WEBSOCKET_PORT=5000
SSE_HEARTBEAT_INTERVAL=30000

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_ERROR=logs/error.log
LOG_FILE_COMBINED=logs/combined.log

# AWS S3 Configuration (Optional for cloud storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=windsurf-uploads

# Admin Email Configuration
ADMIN_EMAIL=admin@grievance-portal.com
NOTIFICATION_EMAIL=notifications@grievance-portal.com

# Performance Configuration
DB_CONNECTION_LIMIT=10
CACHE_TTL=300
REQUEST_TIMEOUT=30000

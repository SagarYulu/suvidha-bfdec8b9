
# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=grievance_user
DB_PASSWORD=grievance_password
DB_NAME=grievance_portal
DB_CONNECTION_LIMIT=10
DB_ACQUIRE_TIMEOUT=60000
DB_TIMEOUT=60000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# SMTP Configuration for Email Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourcompany.com

# AWS S3 Configuration for File Uploads (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=grievance-portal-files

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESS=false

# File Upload Configuration
MAX_FILE_SIZE=10485760
MAX_FILES=5
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,application/msword
UPLOAD_DIR=./uploads

# TAT (Turn Around Time) Configuration
TAT_WARNING_HOURS=168
TAT_CRITICAL_HOURS=336
TAT_BREACH_HOURS=720

# Notification Settings
EMAIL_NOTIFICATIONS=true
SMS_NOTIFICATIONS=false
PUSH_NOTIFICATIONS=true
REALTIME_NOTIFICATIONS=true

# WebSocket Configuration
WEBSOCKET_ENABLED=true
WEBSOCKET_PATH=/ws
WEBSOCKET_PING_INTERVAL=30000
WEBSOCKET_PONG_TIMEOUT=5000

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FILENAME=./logs/app.log
LOG_MAX_SIZE=5242880
LOG_MAX_FILES=5

# Security Settings
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-this
CSRF_ENABLED=false
HELMET_ENABLED=true

# Cache Configuration (Redis - Optional)
CACHE_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TTL=3600

# Health Check Settings
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_ENDPOINT=/health
DETAILED_HEALTH_ENDPOINT=/health/detailed

# Monitoring and Metrics
MONITORING_ENABLED=false
METRICS_ENDPOINT=/metrics
PROMETHEUS_ENABLED=false

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_DESTINATION=./backups

# Docker MySQL Environment Variables (for docker-compose)
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=grievance_portal
MYSQL_USER=grievance_user
MYSQL_PASSWORD=grievance_password
